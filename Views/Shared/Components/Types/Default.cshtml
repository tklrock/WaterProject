@{
}

@model IEnumerable<string>
<a class="btn btn-block
       @(ViewBag.SelectedType == null
           ? "btn-primary": "btn-outline-secondary")" asp-action="Index"
   asp-controller="Home" asp-route-projectType="" asp-route-pageNum="1">
    Home
</a>
@foreach (string category in Model)
{
    <a class="btn btn-block
       @(category == ViewBag.SelectedType
           ? "btn-primary": "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home"
       asp-route-projectType="@category"
       asp-route-pageNum="1">
        @category
    </a>
}